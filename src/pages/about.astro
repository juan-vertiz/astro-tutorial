---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const identity = {
	firstName: "Juan",
	country: "Mexico",
	occupation: "Software Test Automation Engineer",
	defaultHobby: "programming",
};

const skills = ["test automation", "robotic process automation"];
---

<style>
	.skills {
		display: flex;
		flex-wrap: wrap;
		gap: 0.25rem;
	}

	.skill {
		color: var(--dark-color);
    background-color: var(--primary-color);
    border-radius: .5rem;
    padding: .2em .5em;
		margin: 0;
		font-weight: bold;
	}
</style>
<BaseLayout pageTitle={pageTitle} activeItem="about">
	<p>Here are a few facts about me:</p>
	<ul>
		<li>My name is {identity.firstName}.</li>
		<li>I live in {identity.country} and I work as a {identity.occupation}.</li>
		<li>One of my favorite hobbies is <span id="hobby">{identity.defaultHobby}</span>.</li>
	</ul>
	<p>My skills are:</p>
	<div class="skills">
		{skills.map((skill) => <p class="skill">{skill}</p>)}
	</div>
</BaseLayout>

<script is:inline>
	const hobbies = ['programming', 'watching movies', 'playing flag football', 'playing Halo'];

	document.getElementById('hobby').innerText = hobbies[Math.floor(Math.random() * hobbies.length)];
</script>
